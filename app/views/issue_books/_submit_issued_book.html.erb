  <div id="signupbox" style="margin-top:50px" class="mainbox col-md-5 col-md-offset-4 col-sm-7 col-sm-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="panel-title text-center">
          Submit Book</i>
        </div>
      </div>
    </div>  
    <div class="panel-body" >
      <%= form_for @issue_book, :url => {:action => "submit_book"}, :html => {:id => "signupform", :class    => "form-horizontal"} do |f|%>

        <%= f.hidden_field :book_id, :value => @book.id %>
        <div class="form-group">
          <%= f.label  "Book Name.", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.label @book.book_name, class: "control-label" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "ISBN No.", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.label @book.isbn,  class: "form-control "   %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, "User Email", class: "col-md-4 control-label" %>
          <div class="col-md-4 control-label">
            <%= f.select :email, options_for_select(User.all.map{|u| [u.email, u.email]}), {},{class: " selectpicker", data: {"live-search": true}} %>
          </div>  

        </div> 


        <div class="form-group">
          <%= f.label :return_date, "Return date", class: "col-md-4 control-label" %>
          <div class="col-md-4 control-label">
            <%= f.date_field :return_date,required: true,  min: Date.today%>
          </div>  
        </div> 
        <div class="form-group">
          <div class="col-md-offset-4 col-md-8">
            <%= button_tag(type: "submit", id: "btn-signup", class: "btn btn-success ") do %>
            Submit Book 
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
